@page "/profile"
@inject IAuthService AuthService
@attribute [Authorize]
<h3>Profile</h3>
<AuthorizeView>
    <Authorized>
        <div class="col-md-12">
            <h3 class="text-center text-success"><span>Email: @context.User.Identity.Name</span></h3>
        </div>
        <button class="btn btn-success" @onclick="Submit">Logout</button>
    </Authorized>
</AuthorizeView>
@code {
    protected async Task Submit()
    {
        await this.AuthService.Logout();
    }
}
